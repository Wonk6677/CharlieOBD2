<MainScreen>:
    canvas:
        Color:
            hsv: app.hsvcolor
        Rectangle:
            size: self.size
	BoxLayout:
	    Color:
            hsv: app.hsvcolor
		size: 200,200
		pos: self.parent.pos
		orientation: 'vertical'
				
		Label:
			font_size: 42
			text: 'RPM'
		
		Label:
			font_size: 56
			text:app.obdrpm()

	Button:
        text: 'Next screen'
        size_hint: None, None
        pos_hint: {'right': 1}
        size: 150, 50
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'speed'
    Button:
        text: 'Previous screen'
        size_hint: None, None
        size: 150, 50
        on_release: root.manager.current = 'speed'

<Speed>:
    canvas:
        Color:
            hsv: (122, 94, 21)
        Rectangle:
            size: self.size

    BoxLayout:
		size: 200,200
		pos: self.parent.pos
		orientation: 'vertical'

		Label:
			font_size: 42
			text: 'Speed'

		Label:
			font_size: 56
			text: app.speedmph()

    Button:
        text: 'Next screen'
        size_hint: None, None
        pos_hint: {'right': 1}
        size: 150, 50
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'MainScreen'
    Button:
        text: 'Previous screen'
        size_hint: None, None
        size: 150, 50
        on_release: root.manager.current = 'MainScreen'



       